<div class="swiper-container">
  <div class="swiper-wrapper">
    {% for block in section.blocks %}
      <div class="swiper-slide" {{ block.shopify_attributes }} data-index={{ forloop.index0 }}>
        <div 
          class="m-testimonial{% if animated %} m-scroll-trigger animate--{{ animation_effect }}{% endif %}"
          {% if animated %}
            data-cascade 
            style="--animation-order: {{ forloop.index }};"
          {% endif %}
        >
          <!-- WRAPPER COM BORDA GRADIENTE -->
          <div class="m-testimonial__wrapper m-gradient m-color-{{ section.settings.item_color_scheme }} m:blocks-radius">
            <!-- INNER COM FUNDO E CONTEÃšDO -->
            <div class="m-testimonial__inner">
              
              {% if block.settings.image != blank %}
                <{% if block.settings.image_link != blank %}a href="{{ block.settings.image_link | default: '#' }}"{% else %}div{% endif %} class="m-testimonial__image m:flex-col">
                  {% render 'responsive-image', image: block.settings.image, wrapper_class: 'm:blocks-radius-md' %}
                  {% if block.settings.image_text != blank %}
                    <div class="m-testimonial__image-text">
                      {{ block.settings.image_text }}
                    </div>
                  {% endif %}
                </{% if block.settings.image_link != blank %}a{% else %}div{% endif %}>
              {% endif %}

              <div class="m-testimonial__row">
                <div class="m-testimonial__content">
                  {% if section.settings.show_stars %}
                    <div class="m-stars">
                      {%- for i in (1..5) -%}
                        <span class="m-star">{%- render 'icon', name: 'star-solid', size: 'small' -%}</span>
                      {%- endfor -%}
                    </div>
                  {% endif %}

                  {% if block.settings.title != blank %}
                    <p class="m-testimonial__title">{{ block.settings.title }}</p>
                  {% endif %}

                  <div class="m-testimonial__description rte">{{ block.settings.description }}</div>

                  {% if block.settings.footer != blank or block.settings.product %}
                    <div class="m-testimonial__name">
                      <div>{{ block.settings.footer }}</div>
                      {% if block.settings.product %}
                        <a class="m-link-underline" href="{{ block.settings.product.url }}">{{ block.settings.product.title }}</a>
                      {% endif %}
                    </div>
                  {% endif %}
                </div>

