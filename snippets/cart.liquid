<a
  href="{{ routes.cart_url }}"
  class="m-cart-icon-bubble"
  aria-label="{{ cart.item_count }}"
>
  <span class="m-tooltip m:block m-tooltip--bottom m-tooltip--style-2 jmcs_header_icon">
    <svg width="23" height="22" viewBox="0 0 23 22" fill="none" xmlns="http://www.w3.org/2000/svg">
      <path d="M6.95 20.95a1 1 0 1 0 0-2 1 1 0 0 0 0 2m11 0a1 1 0 1 0 0-2 1 1 0 0 0 0 2M1 1h2l2.66 12.42a2 2 0 0 0 2 1.58h9.78a2 2 0 0 0 1.95-1.57L21.04 6H4.07" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
    </svg>
    <span class="m-tooltip__content">{{ 'layout.cart.title' | t }}</span>
  </span>
  <span class="m-cart-count-bubble m-cart-count{% if cart == empty %} m:hidden{% endif %}">{{ cart.item_count }}</span>
</a>
