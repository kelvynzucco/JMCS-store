{% if shop.customer_accounts_enabled or shop.customer_accounts_optional %}
  {% if display_by == 'icon' %}
    <a
      href="{{ routes.account_url }}"
      class="m-header__account{% if box_size != blank %} {{ box_size }}{% endif %}"
      aria-label="{{ 'layout.customer.account' | t  }}"
    >
      <span class="m-tooltip m:block m-tooltip--bottom m-tooltip--style-2 jmcs_header_icon">
        <svg width="18" height="22" viewBox="0 0 18 22" fill="none" xmlns="http://www.w3.org/2000/svg">
          <path d="M16.556 21v-2.222a4.445 4.445 0 0 0-4.445-4.445H5.444A4.444 4.444 0 0 0 1 18.778V21M8.778 9.889a4.444 4.444 0 1 0 0-8.889 4.444 4.444 0 0 0 0 8.889" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
        </svg>
        <span class="m-tooltip__content">{{ 'layout.customer.account' | t }}</span>
      </span>
    </a>
  {% else %}
    <a
      href="{{ routes.account_url }}"
      class="m-header__account-text{% if box_size != blank %} {{ box_size }}{% endif %}"
      aria-label="{{ 'layout.customer.account' | t  }}"
    >
      {{ 'layout.customer.account' | t }}
    </a>
  {% endif %}
{% endif %}
